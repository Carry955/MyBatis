<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.carry.entity.UserMapper">
  <select id="getUserBuCondition" parameterType="Map" resultType="User">
  	select * from test
  	<where>
  		<if test="name!=null">
  			name like CONCAT('%',#{name},'%')
  		</if>
  		<if test="number!=null">
  			AND number like #{number}
  		</if>
  	</where>
  </select>
</mapper>